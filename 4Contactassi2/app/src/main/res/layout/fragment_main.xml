<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jai.contactsassi2.MainFragment">

    <TextView
        android:textSize="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacts"
        android:layout_gravity="center"/>

    <ListView
        android:layout_width="335dp"
        android:layout_height="370dp"
        android:id="@+id/lstvwidContact"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="left" android:id="@+id/addbtn"
            android:onClick="addbtnclick" android:text="Add"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_gravity="right" android:id="@+id/deletebtn"
            android:onClick="writebtn" android:text="delete"/>

    </LinearLayout>


</LinearLayout>
